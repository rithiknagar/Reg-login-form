<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>
    <title>Login</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }        
        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: none;
        }        
        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            border: none;
        }       
        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }
        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid #0d6efd;
            box-shadow: none;
        }        
        .btn-primary {
            background-color: #0d6efd;
            border: none;
            transition: 0.3s;
        }       
        .btn-primary:hover {
            background-color: #0056b3;
        }        
    </style>
</head>
<body class="text-white" style="background-color: rgb(131, 129, 129);" >
    <%- include("./partials/nav.ejs") %>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card bg-dark text-white p-4 shadow-lg" style="width: 350px; border-radius: 10px;">
            <h3 class="text-center mb-3">Login</h3>
            <form action="/signin" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required placeholder="Enter your email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control" required placeholder="Enter your password">
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <% if (locals.valid) { %>
                <div class="text-danger text-center mt-2" role="alert">
                    <%= locals.valid %>
                </div>
            <% } %>            
            <p class="mt-3 text-center">Don't have an account? <a href="/signup" class="text-primary">Sign Up</a></p>
        </div>
    </div>

    <%- include("./partials/script.ejs") %>
</body>
</html>
